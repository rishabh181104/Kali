secondary = ${xrdb:color2:#98971a}
alert = ${xrdb:color3:#d79921}

[bar/main]
width = 100%
height = 30
radius = 5.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = JetBrainsMono Nerd Font:style=Regular:size=10;1

modules-left = sway
